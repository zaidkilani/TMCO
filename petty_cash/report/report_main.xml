<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="main_report" model="ir.actions.report">
		<field name="name">Petty Cash</field>
		<field name="model">petty.cash</field>
		<field name="report_type">qweb-pdf</field>
		<field name="report_name">petty_cash.main_template</field>
		<field name="print_report_name">'Main - %s' % (object.name)</field>
	</record>

	<template id="main_template">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.internal_layout">
					<div class="page">
						<h2 class="text-center">Petty cash Voucher</h2>
						<div class="row mt64">
							<div class="col-3">
								<strong>Opening Balance :</strong>
								<span t-field="o.amount" />
								<span t-field="o.currency_id" />
							</div>
							<div class="col-3">
								<strong>Date:</strong>
								<p t-field="o.start_date" />
							</div>
							<div class="col-3">
								<strong>PCIV No:</strong>
								<p t-field="o.name" />
							</div>
							<div class="col-3">
								<strong>Journal:</strong>
								<p t-field="o.journal_id" />
							</div>
						</div>

						<table border="1"
							class="mt32 table table-bordered oe_import_grid bg-white">
							<thead>
								<tr>
									<th>Sr No.</th>
									<th>Code</th>
									<th>Name</th>
									<th>Job</th>
									<th class="text-right">Amount</th>
								</tr>
							</thead>
							<tbody>
								<t t-set="i" t-value="1" />
								<tr t-foreach="o.petty_cash_line_ids" t-as="oo">
									<td t-esc="i" />
									<td  ><span t-field="oo.product_id.default_code"/></td>
									<td  ><span t-field="oo.product_id"/></td>
									<td  ><span t-field="oo.analytic_account"/></td>
									<td  class="text-right"><span t-field="oo.cost"/></td>
									<t t-set="i" t-value="i+1" />
								</tr>
								<tr>
									<td />
									<td />
									<td />
									<td />
									<td  class="text-right"><span t-field="o.remain_balance"/></td>
								</tr>
							</tbody>
						</table>

					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>
